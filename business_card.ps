%%BeginProlog
% Define helper procedures
/inch {72 mul} def

% Rectangle stroke procedure
/rectstroke {
    4 dict begin
    /h exch def /w exch def /y exch def /x exch def
    newpath
    x y moveto
    w 0 rlineto
    0 h rlineto
    w neg 0 rlineto
    closepath
    stroke
    end
} def

% Center text procedure
/centertext {
    dup stringwidth pop 2 div neg 0 rmoveto show
} def
%%EndProlog

%%BeginSetup
%%EndSetup

%%Page: 1 1
gsave

% Card dimensions: 3.5" x 2" = 252pt x 144pt
% Set up coordinate system with origin at bottom-left

% Draw outer card border
newpath
1.5 setlinewidth
0.2 setgray
10 10 moveto
242 10 lineto
242 134 lineto
10 134 lineto
closepath
stroke

% Draw inner decorative border
newpath
0.5 setlinewidth
15 15 moveto
237 15 lineto
237 129 lineto
15 129 lineto
closepath
stroke

% Reset to black
0 setgray

% Print name (EDIT THIS LINE)
/Helvetica-Bold findfont 20 scalefont setfont
25 105 moveto
(John Smith) show

% Draw decorative line under name
0.8 setlinewidth
newpath
25 95 moveto
215 95 lineto
stroke

% Print phone number (EDIT THIS LINE)
/Helvetica findfont 14 scalefont setfont
25 70 moveto
(Phone: ) show
/Helvetica-Bold findfont 14 scalefont setfont
(555-1234) show

% Draw simple phone icon
0.5 setlinewidth
newpath
25 50 5 0 360 arc
stroke
newpath
25 45 moveto
25 40 lineto
stroke

% Print footer
/Helvetica findfont 8 scalefont setfont
0.4 setgray
25 20 moveto
(Generated by Contact Card Server) show

grestore
showpage
